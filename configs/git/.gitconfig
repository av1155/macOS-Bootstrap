    # signingkey = [Your GPG Key ID]

[core]
    editor = sh -c 'command -v nvim >/dev/null 2>&1 && echo \"nvim\" || command -v code --wait >/dev/null 2>&1 && echo \"code --wait\" || echo \"vi\"'
    autocrlf = input
    excludesfile = ~/.gitignore_global

[alias]
    count = !git ls-remote --heads origin | wc -l
    lg = log --graph --oneline --decorate --all

[color]
    ui = auto
    status = auto
    branch = auto
    diff = auto

[init]
    defaultBranch = main

[push]
    default = current

[merge]
    conflictStyle = diff3

[rebase]
    autosquash = true

[pull]
    rebase = false

[diff]
  algorithm = histogram

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff section
    side-by-side = true

    # delta detects terminal colors automaticaly; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictStyle = diff3

[diff]
    colorMoved = default
